[rebase]
	autoStash = true
	autoSquash = true
[commit]
	verbose = true
	gpgsign = true
[core]
	excludesfile = ~/.config/git/ignore
	commentChar = auto
	pager = delta
[branch]
	autosetupmerge = true
	sort=-committerdate # Sort branches by last commit date, descending.
[rerere]
	enabled = true
[branch "master"]
	rebase = true
[branch "main"]
  rebase = true
[init]
  templatedir = ~/.config/git/init-template
  defaultBranch = main
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[diff "sopsdiffer"]
  textconv = "sops -d"
[delta]
  syntax-theme = TwoDark
[interactive]
  diffFilter = delta --color-only


[includeIf "gitdir:Code/"]
  path = config.insteadofhttp
[alias]
	ci = commit
	fci = -c \"core.editor=fast-conventional\" commit
